<div class="row">
  <div class="col s12 m6 offset-m3">
    <div class="card lighten-1">
      <div class="card-content black-text">
        <span class="card-title center">LOGIN</span>


          <form action="/users/login" method="post">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="{{email}}" required>
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="center">
            <button type="submit" class="btn btn-large teal waves-effect waves-light">Login<i class="material-icons right">send</i></button>
            </div>
            <br>
            <div class="divider"></div>
            <div class="center">
            <p>Not a memeber yet? <a href="/users/register">Sign Up Now!</a></p>
            </div>
          </form>

   
      </div>
    </div>
  </div>
</div>












      